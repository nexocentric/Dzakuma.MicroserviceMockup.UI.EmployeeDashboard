<Window x:Class="Dzakuma.MicroserviceMockup.UI.EmployeeDashboard.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dzakuma.MicroserviceMockup.UI.EmployeeDashboard"
        mc:Ignorable="d"
        Title="Dashboard" Height="350" Width="525">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"></ColumnDefinition>
			<ColumnDefinition Width="7*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
        
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		
		<StackPanel Grid.Column="0" Grid.Row="0">
			<StackPanel>
				<Button Name="GeneralEmployeeDataRefresh" Content="Refresh" Click="GeneralEmployeeDataRefresh_OnClick"></Button>
			</StackPanel>
			
			<StackPanel>
				<ListBox Name="PersonnelList">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<WrapPanel Uid="{Binding Id}">
								<TextBlock Text="{Binding LastName}"></TextBlock>
								<TextBlock Text=", "></TextBlock>
								<TextBlock Text="{Binding FirstName}"></TextBlock>
							</WrapPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</StackPanel>
		</StackPanel>
    </Grid>
</Window>
